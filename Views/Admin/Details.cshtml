@model bigSales.Models.Product
@{
Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Ürün Detayları</h2>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="img-box">
                <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid" style="width: 100%;" />
            </div>
        </div>
        <div class="col-md-6">
            <h4>@Model.Name</h4>
            <p><strong>Fiyat:</strong> @Model.Price</p>
            <strong>Açıklama:</strong>
            <div class="product-description">
                <p>
                    @Model.Description
                </p>

            </div>
            <p><strong>Kategori:</strong> @Model.Category.Name</p>
            <form asp-controller="Cart" asp-action="Add" method="post">
                <input type="hidden" name="productId" value="@Model.Id" />
            </form>
            <br />
            <a asp-controller="Admin" asp-action="List" class="btn btn-secondary">Geri</a>
        </div>
    </div>
</div>
<style>
    .product-description {
        word-wrap: break-word;
        /* Uzun metinlerin taşmasını engeller */
        overflow-wrap: break-word;
        /* Alternatif olarak overflow wrap */
    }
</style>