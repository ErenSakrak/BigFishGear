@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<bigSales.Models.Product>

<section class="inner_page_head">
    <div class="container_fuild">
        <div class="row">
            <div class="col-md-12">
                <div class="heading_container heading_center">
                    <h2>Yemler</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="product_section layout_padding">
    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="box">
                        <div class="option_container">
                            <div class="options">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="option1">
                                    Ürünü İncele
                                </a>
                                <a asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id" class="option2">
                                    Sepete Ekle
                                </a>
                            </div>
                        </div>
                        <div class="img-box">
                            <img src="@product.ImagePath" alt="@product.Name" />
                        </div>
                        <div class="detail-box">
                            <h5>@product.Name</h5>
                            <h6 class="price">@string.Format("{0:C}", product.Price)</h6>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
